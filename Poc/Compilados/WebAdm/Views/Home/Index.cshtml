@{
    ViewBag.Title = "Home Page";
}
<div class="container body-content">

    <br />

    <div class="jumbotron">

        @{
            string Mensage = "Aplicativo";
            Erp.Configuracoes configura = new Erp.Configuracoes().Obter("MensagemBemvindo");
            if (configura != null)
            {
                Mensage = configura.valor;
            }
        }
        @{
            bool exibirLogin = false;
            configura = new Erp.Configuracoes().Obter("ExibirTelaLogin");

            if (configura != null)
            {
                bool.TryParse(configura.valor, out exibirLogin);
            }

            if (!exibirLogin || Session["login"] != null)
            {
                <h1>BEM-VINDO(A)</h1>
                <p class="lead"> @Mensage </p>
            }
            else 
            {
                <br />
                <div class="alert alert-success alert-dismissible" role="alert">
                    <p><strong>Informe os dados de acesso</strong></p>
                </div>
                <form action="~/home/login" method="post">
                    <div class="form-group row">
                        <label for="inputEmail" class="col-sm-2 col-form-label">Login</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputEmail" name="Email" placeholder="Login">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Senha</label>
                        <div class="col-sm-10">
                            <input type="password" name="Senha" class="form-control" id="inputPassword" placeholder="informe a sua senha">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Entrar</button>
                        </div>
                    </div>
                </form>

            }
        }

    </div>


    <div class="row">
        <div class="col-md-4">


        </div>
    </div>

</div>

